class Legs : weapon { 
	Default {
		
		Weapon.Kickback 8192;
		Inventory.PickupMessage "";
		Obituary "%k > Legs > %o";
		+WEAPON.NOAUTOFIRE;
		+Inventory.UNDROPPABLE;
		+NOALERT;
	}
	States
	{
		Ready:
			TNT1 A 1 A_WeaponReady();
			Loop;
		DeSelect:
			TNT1 L 1 A_Lower();
			Loop;
		Select:
			TNT1 A 1 A_Raise();
			Loop;
		Fire:
			KEKE A 3;
			KEKE B 5 A_CustomPunch (255, 0, 0, "KickPuff");
			Goto Ready;
		AltFire:
			KEKE C 3;
			KEKE D 5 A_CustomPunch (255, 0, 0, "KickPuff");
			Goto Ready;
	}
}
