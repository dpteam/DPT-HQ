class Doomer : PlayerPawn { 
	Default {
		
		+NOSKIN;
		+SOLID;
		+DROPOFF;
		+PICKUP;
		+NOTDMATCH;
		Speed 1;
		Health 100;
		Radius 16;
		Height 56;
		PainChance 255;
		Player.DisplayName "Flynn Taggart";
		Player.CrouchSprite "PLYC";
		Player.StartItem "Legs";
	}
	States
	{
		Spawn:
			PLAY A -1;
			Loop;
		See:
			PKIK AB 3;
			Loop;
		Melee:
			PKIK C 4;
			Goto Spawn;
		Pain:
			PLAY A 4 A_Pain();
			Goto Spawn;
		Pain.Ball:
			PLAY G 4();
			PLAY G 4 A_Pain();
			Goto Spawn;
		Death:
			PLAY H 10;
			PLAY I 10 A_PlayerScream();
			PLAY J 10 A_NoBlocking();
			PLAY KLM 10;
			PLAY N -1;
			Stop;
	}
}

